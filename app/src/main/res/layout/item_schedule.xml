<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/item_schedule_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textview_schedule_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/grey_900"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/textview_schedule_name"
            app:layout_constraintStart_toStartOf="@+id/textview_schedule_name" />

        <TextView
            android:id="@+id/textview_schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="16:00 - 20:30"
            android:textColor="@color/green_700"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/textview_schedule_days"
            app:layout_constraintStart_toStartOf="@+id/textview_schedule_days"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/textview_schedule_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Special day"
            android:textColor="@color/grey_900"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
        />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_schedule_date"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="right"
            android:text="Edit"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/coral"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@+id/switch_schedule_date"
            app:layout_constraintBottom_toBottomOf="@+id/textview_schedule_time"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>