<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="false">
        <shape
            android:shape="rectangle" >
            <corners
                android:radius="15dp" />
            <size
                android:width="50dp"
                android:height="30dp" />
            <solid
                android:color="@color/grey_200" />
            <stroke
                android:color="@color/grey_200"
                android:width="1dp" />
        </shape>
    </item>


    <item
        android:state_checked="true" >
        <shape
            android:shape="rectangle">
            <corners
                android:radius="15dp" />
            <size
                android:width="50dp"
                android:height="30dp" />
            <solid
                android:color="@color/green_200" />
            <stroke
                android:color="@color/green_200"
                android:width="1dp" />
        </shape>
    </item>
</selector>