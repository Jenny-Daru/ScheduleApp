<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:shape="oval">
            <size
                android:width="25dp"
                android:height="25dp" />
            <solid android:color="@color/grey_700" />
            <stroke
                android:width="1dp"
                android:color="@color/grey_700" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="oval">
            <size
                android:width="25dp"
                android:height="25dp" />
            <solid android:color="@color/green_200" />
            <stroke
                android:width="1dp"
                android:color="@color/green_200" />
        </shape>
    </item>

</selector>